<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="3dp"
        android:bottom="5dp"
        android:gravity="bottom"
        android:left="7dp"
        android:right="7dp">
        <shape>
            <corners android:radius="5px" />
            <gradient
                android:angle="90"
                android:endColor="@color/color_transparent"
                android:startColor="@color/color_black_20" />
        </shape>
    </item>
    <item
        android:bottom="7dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape>
            <corners android:radius="5px" />
            <solid android:color="@color/color_white_20" />
            <stroke
                android:width="1px"
                android:color="@color/color_black_40" />
        </shape>
    </item>
</layer-list>
