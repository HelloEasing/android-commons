<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:layout_anchorGravity="center">


    <EditText
        android:id="@+id/input1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_m05"
        android:digits="0123456789"
        android:maxLength="11"
        android:textCursorDrawable="@drawable/edit_cursor_m02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_m05"
        android:digits="0123456789"
        android:maxLength="6"
        android:textCursorDrawable="@drawable/edit_cursor_m02"
        app:layout_constraintTop_toBottomOf="@+id/input1" />


    <Button
        android:id="@+id/bt1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/color_white_20_40"
        app:layout_constraintBottom_toBottomOf="@+id/input1"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/color_white_20_40"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/input2" />
</androidx.constraintlayout.widget.ConstraintLayout>