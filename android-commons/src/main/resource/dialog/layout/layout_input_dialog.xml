<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_white"
    app:contentPaddingBottom="20dp"
    app:contentPaddingLeft="20dp"
    app:contentPaddingRight="20dp"
    app:contentPaddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.4"
            android:text="请输入"
            android:textColor="@color/color_black_70"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_m07"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_black_70"
            android:textCursorDrawable="@drawable/edit_cursor_m02"
            android:textSize="16dp" />

        <com.easing.commons.android.ui.control.button.ImageButtonM2
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:background="@drawable/container_back_m13_ripple"
            app:text="确定"
            app:textColor="@color/color_black_70" />
    </LinearLayout>
</androidx.cardview.widget.CardView>