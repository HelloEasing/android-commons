<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="300" android:propertyName="scaleX" android:valueTo="1.02" />
            <objectAnimator android:duration="300" android:propertyName="scaleY" android:valueTo="1.02" />
        </set>
    </item>

    <item>
        <set>
            <objectAnimator android:duration="300" android:propertyName="scaleX" android:valueTo="1.0" />
            <objectAnimator android:duration="300" android:propertyName="scaleY" android:valueTo="1.0" />
        </set>
    </item>
</selector>