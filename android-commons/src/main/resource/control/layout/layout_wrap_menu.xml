<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="right|center_vertical"
        android:alpha="0"
        android:clickable="true"
        android:src="@drawable/float_icon_m01_camera" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="right|center_vertical"
        android:alpha="0"
        android:clickable="true"
        android:src="@drawable/float_icon_m01_distance" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="right|center_vertical"
        android:alpha="0"
        android:clickable="true"
        android:src="@drawable/float_icon_m01_clear" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="right|center_vertical"
        android:alpha="0.8"
        android:clickable="true"
        android:src="@drawable/float_icon_m01_setting" />
</FrameLayout>