<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/color_icon_m02_user_m01" />

        <EditText
            android:id="@+id/user_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/color_transparent"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:hint="请输入您的登录账号"
            android:maxLength="25"
            android:singleLine="true"
            android:textColor="@color/color_black_90"
            android:textCursorDrawable="@drawable/edit_cursor_m02" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="3dp"
        android:background="@color/color_light_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/color_icon_m01_lock_m01" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/color_transparent"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:hint="请输入您的登录密码"
            android:inputType="textPassword"
            android:longClickable="false"
            android:maxLength="25"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:textColor="@color/color_black_90"
            android:textCursorDrawable="@drawable/edit_cursor_m02"
            android:textIsSelectable="false" />

        <ImageView
            android:id="@+id/bt_eye"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/color_icon_m01_password_eye"
            android:tint="@color/color_black_90" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="3dp"
        android:background="@color/color_light_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left|center_vertical">

        <ImageView
            android:id="@+id/bt_remember"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_checkbox_m01"
            android:tint="@color/color_light_blue" />

        <TextView
            android:id="@+id/text_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="记住密码"
            android:textColor="@drawable/color_black_70" />

        <ImageView
            android:id="@+id/bt_auto_login"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_checkbox_m01"
            android:tint="@color/color_light_blue"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="自动登录"
            android:textColor="@drawable/color_black_70"
            android:visibility="invisible" />
    </LinearLayout>


    <Button
        android:id="@+id/bt_login"
        style="@style/button_m01"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:text="登 录"
        android:textSize="16dp" />

</LinearLayout>