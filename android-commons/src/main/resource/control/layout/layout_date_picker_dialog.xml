<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="选择日期"
        android:textColor="@color/color_black_70"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_pre"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-2dp"
            android:clickable="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/icon_pre_m01"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:background="@drawable/date_picker_button_back"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/icon_calendar_m01"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/bt_date"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="yyyy年MM月"
                android:textColor="@color/color_light_blue"
                android:textSize="18dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bt_next"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-2dp"
            android:clickable="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/icon_next_m01"
            android:textSize="18dp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/group_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="7"
        android:rowCount="7" />

    <Button
        android:id="@+id/bt_ok"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_m01"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/color_white"
        android:textSize="18dp" />

</LinearLayout>

